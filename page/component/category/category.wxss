@import '../../common/common.wxss';

page, .main {
    height: 100%;
}

.categroy-left {
    float: left;
    width: 220rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}

.categroy-left .cate-list {
    height: 150rpx;
    line-height: 150rpx;
    text-align: center;
    border-left: 5px solid #fff;
}

.categroy-left .cate-list.on {
    color: #ab956d;
    border-color: #ab956d;
}

.categroy-right {
    float: right;
    width: 530rpx;
    height: 100%;
    overflow: hidden;
}

.cate-title {
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding: 30rpx 0 55rpx;
    text-align: center;
    color: #ab956d;
    font-size: 28rpx;
}

.cate-title::before {
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #ab956d;
}

.cate-title::after {
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #ab956d;
}

.product-list {
    display: inline-block;
    width: 100%;
    text-align: center;
    margin: 0 20rpx 20rpx 0;
    font-size: 24rpx;
    border-bottom: 1px solid rgb(212, 211, 211);
    padding: 7rpx;
}

.product-list image {
    width: 200rpx;
    height: 200rpx;
    float: left;
    margin-right: 10rpx;
}

.goods-text-container {
    float: left;
    width: 300rpx;
    height: 200rpx;
    position: relative;
}

.product-list:nth-child(3n) {
    margin-right: 0;
}

.product-list .goodsname {
    font-size: 30rpx;
}

.product-list .goodsprice {
    font-size: 30rpx;
    color: green;
    right: 0rpx;
    bottom: 0rpx;
    position: absolute;
}
